<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_5"
    android:paddingTop="@dimen/dp_5">

    <ImageView
        android:id="@+id/imgPin"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:src="@drawable/ic_room_black"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txtPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/prediction_color"
        android:textSize="@dimen/post_field_txt_size"
        android:gravity="left"
        android:layout_toRightOf="@id/imgPin"/>

    <TextView
        android:id="@+id/txtSecondary"
        android:layout_width="match_parent"
        android:layout_below="@id/txtPrimary"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/prediction_color"
        android:layout_marginTop="3dp"
        android:gravity="left"
        android:layout_alignLeft="@id/txtPrimary"/>

</RelativeLayout>